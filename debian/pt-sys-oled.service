[Unit]
Description=pi-top OLED system menu
Documentation=https://knowledgebase.pi-top.com/knowledge
# Required to determine what type of device
After=pt-device-manager.service
StartLimitIntervalSec=30
StartLimitBurst=5

[Service]
Type=simple
Restart=on-failure
Environment="PT_SDK_MINISCREEN_SYSTEM=1"
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONDONTWRITEBYTECODE=1"
ExecStart=/usr/lib/pt-sys-oled/pt-sys-oled

[Install]
WantedBy=multi-user.target
